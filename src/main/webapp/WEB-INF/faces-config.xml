<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <resource-bundle>
            <base-name>view.Messages</base-name>
            <var>messages</var>
        </resource-bundle>
    </application>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <if>#{login.succ}</if>
            <to-view-id>/user/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <if>#{login.succAdmin}</if>
            <to-view-id>/admin/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <if>#{login.newAccount}</if>
            <to-view-id>/success.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/user/index.xhtml</from-view-id>
        <navigation-case>
            <if>#{client.successa}</if>
            <to-view-id>/user/success.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
      <navigation-rule>
        <from-view-id>/success.xhtml</from-view-id>
        <navigation-case>
            <if>#{logout.succ}</if>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
